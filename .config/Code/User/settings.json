        "!rust",
        "!scala",
        "!typescript",
        "!typescriptreact",
        "blade",
        "csv",
        "php",
        "vue"
    ],
    "cSpell.language": "en,en-GB,en-US,fr,fr-FR",
    "cSpell.maxDuplicateProblems": 2,
    "cSpell.showStatus": false,
    "customizeUI.activityBar": "bottom",
    "customizeUI.titleBar": "regular",
    "customizeUI.font.regular": "Noto Sans",
    "customizeUI.listRowHeight": 26,
    "customizeUI.font.monospace": "Cascadia Code",
    "customizeUI.stylesheet": {
        ".mtki": "font-family: 'Dank Mono' !important; font-weight: 600 !important; font-size: 1.2em !important; letter-spacing: -1px !important"
    },
}
