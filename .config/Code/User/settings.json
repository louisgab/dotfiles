{
    "breadcrumbs.enabled": false,
    "diffEditor.renderSideBySide": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoIndent": "full",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorWidth": 4,
    "editor.fontFamily": "'Cascadia Code', 'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "500",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // "editor.glyphMargin": false,
    "editor.hover.delay": 200,
    "editor.lineHeight": 40,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "selection",
    "editor.rulers": [
        80,
        120,
        140
    ],
    "editor.minimap.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 4,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "emphasis",
                    "italic",
                    "constant.language",
                    "entity.other.attribute-name",
                    "entity.other.attribute-name.id",
                    "keyword.control",
                    "keyword.operator.new",
                    "keyword.other",
                    "quote",
                    "storage.type",
                    "storage.modifier",
                    "variable.language",
                    "support.class.builtin",
                    "support.function",
                ],
                "settings": {
                    "fontStyle": "italic",
                }
            }
        ]
    },
    "emmet.includeLanguages": {
        "blade.php": "html",
        "twig": "html"
    },
    "explorer.autoReveal": true,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,
    "extensions.closeExtensionDetailsOnViewChange": true,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autoStash": true,
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.postCommitCommand": "push",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.showPushSuccessNotification": true,
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "search.collapseResults": "auto",
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "One Dark Pro",
    // "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 20,
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        // Dracula theme in terminal
        "terminal.ansiBlack": "#44475A",
        "terminal.ansiBlue": "#BD93F9",
        "terminal.ansiBrightBlack": "#999999",
        "terminal.ansiBrightBlue": "#BD93F9",
        "terminal.ansiBrightCyan": "#8BE9FD",
        "terminal.ansiBrightGreen": "#50FA7B",
        "terminal.ansiBrightMagenta": "#FF79C6",
        "terminal.ansiBrightRed": "#FF5454",
        "terminal.ansiBrightWhite": "#FFFFFF",
        "terminal.ansiBrightYellow": "#F1FA8C",
        "terminal.ansiCyan": "#8BE9FD",
        "terminal.ansiGreen": "#50FA7B",
        "terminal.ansiMagenta": "#FF79C6",
        "terminal.ansiRed": "#FF5454",
        "terminal.ansiWhite": "#BBBBBB",
        "terminal.ansiYellow": "#F1FA8C",
        "terminal.foreground": "#F8F8F2",
        "terminalCursor.background": "#E9E9F4",
        "terminalCursor.foreground": "#E9E9F4",
    },
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.drawBoldTextInBrightColors": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.fontWeightBold": "600",
    "terminal.integrated.lineHeight": 1.5,
    // --------------------------- Extensions --------------------------- //
    // Git
    "git-graph.dateFormat": "Relative",
    "git-graph.fetchAvatars": true,
    "git-graph.openDiffTabLocation": "Beside",
    "gitlens.advanced.telemetry.enabled": false,
    // PHP
    "blade.format.enable": true,
    "php-cs-fixer.allowRisky": true,
    "php-cs-fixer.onsave": true,
